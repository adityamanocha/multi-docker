{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image": "adityamanocha/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name":"server",
            "image": "adityamanocha/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name":"worker",
            "image": "adityamanocha/multi-worker",
            "hostname":"worker",
            "essential":false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "adityamanocha/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 128
        }
    ] 
}